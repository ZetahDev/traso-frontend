<style>
  .historia-section {
    padding: 80px 20px;
    background: white;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-header h2 {
    font-size: 2.5rem;
    color: #2d4373;
    margin-bottom: 1rem;
  }

  .section-header p {
    font-size: 1.2rem;
    color: #666;
  }

  /* Timeline */
  .timeline {
    position: relative;
    padding: 40px 0;
  }

  .timeline::before {
    content: "";
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 100%;
    background: linear-gradient(180deg, #3b5998 0%, #27ae60 100%);
  }

  .timeline-item {
    position: relative;
    margin-bottom: 50px;
    width: 50%;
    padding: 0 40px;
  }

  .timeline-item.left {
    left: 0;
    padding-right: 40px;
    text-align: right;
  }

  .timeline-item.right {
    left: 50%;
    padding-left: 40px;
    text-align: left;
  }

  .timeline-marker {
    position: absolute;
    top: 0;
    width: 20px;
    height: 20px;
    background: #3b5998;
    border: 4px solid white;
    border-radius: 50%;
    box-shadow: 0 0 0 4px #3b5998;
  }

  .timeline-item.left .timeline-marker {
    right: -10px;
  }

  .timeline-item.right .timeline-marker {
    left: -10px;
  }

  .timeline-item.future .timeline-marker.future-marker {
    background: #27ae60;
    box-shadow: 0 0 0 4px #27ae60;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.8;
    }
  }

  .timeline-content {
    background: white;
    padding: 25px;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .timeline-content:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .timeline-year {
    display: inline-block;
    background: linear-gradient(135deg, #3b5998 0%, #2d4373 100%);
    color: white;
    padding: 8px 20px;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.9rem;
    margin-bottom: 15px;
  }

  .timeline-item.future .timeline-year {
    background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
  }

  .timeline-content h3 {
    font-size: 1.5rem;
    color: #2d4373;
    margin-bottom: 1rem;
  }

  .timeline-content p {
    font-size: 1rem;
    line-height: 1.7;
    color: #555;
    margin-bottom: 1rem;
  }

  .timeline-highlights {
    list-style: none;
    padding: 0;
    margin: 15px 0 0 0;
  }

  .timeline-highlights li {
    padding: 5px 0;
    color: #27ae60;
    font-weight: 500;
  }

  /* Future Goals */
  .future-goals {
    display: flex;
    gap: 15px;
    margin-top: 15px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .timeline-item.left .future-goals {
    justify-content: flex-end;
  }

  .timeline-item.right .future-goals {
    justify-content: flex-start;
  }

  .goal {
    background: #f8f9fa;
    padding: 10px 20px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 0.95rem;
    color: #2d4373;
    font-weight: 500;
  }

  .goal-icon {
    font-size: 1.3rem;
  }

  /* Logros Section */
  .logros-section {
    margin-top: 80px;
    text-align: center;
  }

  .logros-section h3 {
    font-size: 2rem;
    color: #2d4373;
    margin-bottom: 40px;
  }

  .logros-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 30px;
  }

  .logro-card {
    background: linear-gradient(135deg, #3b5998 0%, #2d4373 100%);
    padding: 40px 20px;
    border-radius: 12px;
    color: white;
    transition: transform 0.3s ease;
  }

  .logro-card:hover {
    transform: translateY(-8px);
  }

  .logro-number {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .logro-label {
    font-size: 1.1rem;
    opacity: 0.95;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .timeline::before {
      left: 20px;
    }

    .timeline-item,
    .timeline-item.left,
    .timeline-item.right {
      width: 100%;
      left: 0;
      padding: 0 0 0 60px;
      text-align: left;
    }

    .timeline-marker,
    .timeline-item.left .timeline-marker,
    .timeline-item.right .timeline-marker {
      left: 10px;
      right: auto;
    }

    .future-goals,
    .timeline-item.left .future-goals,
    .timeline-item.right .future-goals {
      justify-content: flex-start;
    }

    .logros-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .logro-number {
      font-size: 2.5rem;
    }
  }
</style>
