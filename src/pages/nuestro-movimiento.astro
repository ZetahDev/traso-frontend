<style>
  .nuestro-movimiento {
    min-height: 100vh;
  }

  .hero-section {
    background: linear-gradient(135deg, #3b5998 0%, #2d4373 100%);
    color: white;
    padding: 120px 20px 80px;
    text-align: center;
  }

  .hero-section h1 {
    font-size: 3.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
  }

  .hero-section .subtitle {
    font-size: 1.5rem;
    opacity: 0.95;
    max-width: 700px;
    margin: 0 auto;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Qui茅nes Somos */
  .quienes-somos {
    padding: 80px 20px;
    background: white;
  }

  .content-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .text-content h2 {
    font-size: 2.5rem;
    color: #2d4373;
    margin-bottom: 1.5rem;
  }

  .text-content .intro {
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
    color: #333;
    line-height: 1.8;
  }

  .text-content p {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #555;
    margin-bottom: 1.2rem;
  }

  .image-content {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .stat-card {
    background: linear-gradient(135deg, #3b5998 0%, #2d4373 100%);
    padding: 30px;
    border-radius: 12px;
    text-align: center;
    color: white;
    box-shadow: 0 4px 15px rgba(59, 89, 152, 0.3);
    transition: transform 0.3s ease;
  }

  .stat-card:hover {
    transform: translateY(-5px);
  }

  .stat-number {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 1.1rem;
    opacity: 0.9;
  }

  /* Misi贸n y Visi贸n */
  .mision-vision {
    padding: 80px 20px;
    background: #f8f9fa;
  }

  .grid-two {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
  }

  .card {
    background: white;
    padding: 40px;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .card .icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .card h3 {
    font-size: 1.8rem;
    color: #2d4373;
    margin-bottom: 1rem;
  }

  .card p {
    font-size: 1.05rem;
    line-height: 1.8;
    color: #555;
  }

  .mision {
    border-top: 4px solid #e74c3c;
  }

  .vision {
    border-top: 4px solid #27ae60;
  }

  /* CTA Final */
  .cta-final {
    padding: 80px 20px;
    background: linear-gradient(135deg, #2d4373 0%, #1e2d4f 100%);
    color: white;
    text-align: center;
  }

  .cta-final h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .cta-final p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.95;
  }

  .cta-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 15px 40px;
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .btn-primary {
    background: #e74c3c;
    color: white;
    border: 2px solid #e74c3c;
  }

  .btn-primary:hover {
    background: #c0392b;
    border-color: #c0392b;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(231, 76, 60, 0.4);
  }

  .btn-outline {
