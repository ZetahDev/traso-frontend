<script>
  // Filtrado de eventos
  document.addEventListener("DOMContentLoaded", () => {
    const filtroTipo = document.getElementById(
      "filtroTipo"
    ) as HTMLSelectElement;
    const filtroModalidad = document.getElementById(
      "filtroModalidad"
    ) as HTMLSelectElement;
    const btnReset = document.getElementById("btnResetFiltros");
    const eventosCards = document.querySelectorAll("[data-tipo]");

    function filtrarEventos() {
      const tipoSeleccionado = filtroTipo.value;
      const modalidadSeleccionada = filtroModalidad.value;

      eventosCards.forEach((card) => {
        const tipo = card.getAttribute("data-tipo");
        const modalidad = card.getAttribute("data-modalidad");

        const cumpleTipo =
          tipoSeleccionado === "todos" || tipo === tipoSeleccionado;
        const cumpleModalidad =
          modalidadSeleccionada === "todos" ||
          modalidad === modalidadSeleccionada;

        if (cumpleTipo && cumpleModalidad) {
          (card as HTMLElement).style.display = "flex";
        } else {
          (card as HTMLElement).style.display = "none";
        }
      });
    }

    filtroTipo?.addEventListener("change", filtrarEventos);
    filtroModalidad?.addEventListener("change", filtrarEventos);

    btnReset?.addEventListener("click", () => {
      if (filtroTipo) filtroTipo.value = "todos";
      if (filtroModalidad) filtroModalidad.value = "todos";
      filtrarEventos();
    });
  });
</script>

